{
  "name": "@reduct/component",
  "version": "1.0.6",
  "description": "A prototypical class that makes it easy to create Components with nodes, a powerfull instance configuration system and a react-like API.",
  "main": "Dist/Component.js",
  "scripts": {
    "test": "jest && reduct build",
    "reduct": "reduct",
    "jest": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reduct/component.git"
  },
  "keywords": [
    "prototype",
    "class",
    "component",
    "inheritance",
    "react",
    "dom"
  ],
  "author": "reduct",
  "contributors": [
    {
      "name": "Tyll Weiß",
      "email": "inkdpixels@gmail.com",
      "url": "https://github.com/Inkdpixels/"
    },
    {
      "name": "André König",
      "email": "andre.koenig@posteo.de",
      "url": "https://github.com/akoenig/"
    },
    {
      "name": "Wilhelm Behncke",
      "url": "https://github.com/grebaldi"
    }
  ],
  "license": {
    "type": "MIT",
    "url": "http://www.opensource.org/licenses/mit-license.php"
  },
  "bugs": {
    "url": "https://github.com/reduct/component/issues"
  },
  "homepage": "https://github.com/reduct/component#readme",
  "devDependencies": {
    "@reduct/build-tools": "^1.0.2",
    "babel-jest": "^5.3.0",
    "glob": "^5.0.12",
    "jest-cli": "^0.4.13"
  },
  "reduct": {
    "sourceFolder": "Src/",
    "distributionFolder": "Dist/",
    "entryFile": "Component.js",
    "globalPackageName": "reductComponent",
    "coverageReportFile": "lcov.info"
  },
  "jest": {
    "scriptPreprocessor": "node_modules/babel-jest",
    "collectCoverage": true,
    "collectCoverageOnlyFrom": {
      "<rootDir>/Src/Component.js": true
    },
    "testDirectoryName": "<rootDir>/Tests",
    "unmockedModulePathPatterns": [
      "./Src",
      "./Dist",
      "./Tests/ExampleComponents"
    ]
  }
}
